[flake8]
max-line-length = 88
select = E,W,F
extend-ignore = 
    E203,  # whitespace before ':' (conflicts with black)
    W503,  # line break before binary operator (conflicts with black)
    E501,  # line too long (handled by black)
    F401,  # imported but unused (handled by isort)
exclude = 
    .git,
    __pycache__,
    build,
    dist,
    *.egg-info,
    .venv,
    venv,
    .tox,
    .pytest_cache
max-complexity = 10
per-file-ignores = 
    __init__.py:F401
    tests/*:S101
